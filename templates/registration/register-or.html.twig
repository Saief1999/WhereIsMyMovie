{% extends 'inner-page.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.user.firstName) }}
        {{ form_row(registrationForm.user.lastName) }}
        {{ form_row(registrationForm.user.login) }}
        {{ form_row(registrationForm.user.email) }}
        {{ form_row(registrationForm.user.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.favoriteGenres) }}
    {#    {{ form_row(registrationForm.user.agreeTerms) }}#}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
